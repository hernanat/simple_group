%h1.breadcrumb
  = link_to t("admin.users.index.title"), admin_users_path
  = "/ #{t('.ban')} #{@user.username}"
= simple_form_for @ban_form, url: admin_user_path(@user), method: :patch do |f|
  = f.input :ban_duration,
    collection: BanUserForm::BAN_DURATIONS.map { |d| [t(".ban_durations.#{d}"), d] },
    required: true
  = f.input :ban_reason, as: :text, required: true
  = f.button :button, type: :submit,
    data: { confirm: "Are you sure you want to ban #{@user.username}?" }

